<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="carnet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="vehicle">
		<label>Vehicle</label>
		<description>The thing represents one vehicle</description>

        <channel-groups>
            <channel-group id="general" typeId="general"/>
            <channel-group id="status" typeId="status"/>
            <channel-group id="windows" typeId="windows"/>
            <channel-group id="doors" typeId="doors"/>
            <channel-group id="tyres" typeId="tyres"/>
        </channel-groups>

        <config-description-ref uri="thing-type:carnet:vehicle" />
	</thing-type>

    <channel-group-type id="general">
        <label>Vehicle</label>
        <description>General information on the vehicle</description>
        <channels>
            <channel id="vin" typeId="vin" />
        </channels>
    </channel-group-type>
    <channel-group-type id="status">
        <label>Status</label>
        <description>Vehicle status</description>
    </channel-group-type>
    <channel-group-type id="windows">
        <label>Window Status</label>
        <description>Status of the windows</description>
    </channel-group-type>
    <channel-group-type id="doors">
        <label>Door Status</label>
        <description>Status of all doors</description>
    </channel-group-type>
    <channel-group-type id="tyres">
        <label>Tyres Status</label>
        <description>Status of all tyres</description>
    </channel-group-type>

	<channel-type id="vin">
        <item-type>String</item-type>
		<label>VIN</label>
		<description>The Vehicle Identification number - a unique ID to identify the vehicle</description>
        <state readOnly="true"/>
	</channel-type>

</thing:thing-descriptions>
